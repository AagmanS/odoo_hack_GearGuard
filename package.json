{
  "name": "gear-guard-root",
  "version": "1.0.0",
  "description": "A comprehensive equipment management system with downtime cost calculation and human impact assessment",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "cd backend && npm start",
    "build": "cd frontend && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "migrate": "cd backend && npx knex migrate:latest"
  },
  "keywords": [
    "equipment",
    "maintenance",
    "management",
    "downtime",
    "cost",
    "impact",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "Gear-Guard Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "express": "^4.18.2",
    "pg": "^8.11.0"
  }
}